<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rim of Madness - Bones</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName = "MC_BrothLavish"]/ingredients</xpath>
                    <value>
                        <ingredients>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>BoneItem</li>
                                    </thingDefs>
                                </filter>
                                <count>40</count>
                            </li>
                        </ingredients>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName = "MC_BrothLavish"]/products</xpath>
                    <value>
                        <ROMB_Marrow>10</ROMB_Marrow>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName = "MC_BrothLavish"]/fixedIngredientFilter/thingDefs</xpath>
                    <value>
                        <thingDefs>
                            <li>BoneItem</li>
                        </thingDefs>
                    </value>
                </li>


                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName = "MC_BrothGourmet"]/ingredients</xpath>
                    <value>
                        <ingredients>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>BoneItem</li>
                                    </thingDefs>
                                </filter>
                                <count>20</count>
                            </li>
                        </ingredients>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName = "MC_BrothGourmet"]/products</xpath>
                    <value>
                        <ROMB_Marrow>5</ROMB_Marrow>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[defName = "MC_BrothGourmet"]/fixedIngredientFilter/thingDefs</xpath>
                    <value>
                        <thingDefs>
                            <li>BoneItem</li>
                        </thingDefs>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/RecipeDef[@Name = "MC_Recipe_BrothBase"]/defaultIngredientFilter/thingDefs</xpath>
                    <value>
                        <thingDefs>
                            <li>BoneItem</li>
                        </thingDefs>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>
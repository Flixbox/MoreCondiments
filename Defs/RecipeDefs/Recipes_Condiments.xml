<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<RecipeDef Name="MC_Recipe_CondimentBase" Abstract="True">
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>200</workAmount>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>VCE_CondimentPrepTable</li>
		</recipeUsers>
		<researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="MC_Recipe_CondimentBase">
		<defName>MC_BloodInfusedSauce</defName>
		<label>make blood infused sauce</label>
		<description>Create blood infused sauce from alcohol and blood. Tastes good and makes you not want to eat for a while. The alcohol evaporates in the process.</description>
		<jobString>Making blood infused sauce.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories></categories>
					<thingDefs>
						<li>Beer</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
			<thingDefs>
				<li>Beer</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MC_BloodInfusedSauce>10</MC_BloodInfusedSauce>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="MC_Recipe_CondimentBase">
		<defName>MC_Starch</defName>
		<label>make corn starch</label>
		<description>Create corn starch. High-amylose corn starch decreases blood glucose and insulin response and increases satiety, or how long someone feels full after eating.</description>
		<jobString>Making corn starch.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCorn</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCorn</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MC_Starch>10</MC_Starch>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="MC_Recipe_CondimentBase" Name="MC_Recipe_BrothBase" Abstract="True">
		<workAmount>1000</workAmount>
		<ingredientValueGetterClass>VanillaCookingExpanded.IngredientValueGetter_NutritionWithExtraIngredient</ingredientValueGetterClass>
		<workSkill>Cooking</workSkill>
		<defaultIngredientFilter>
			<thingDefs></thingDefs>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedCategories>
				<li>EggsFertilized</li>
			</disallowedCategories>
			<disallowedThingDefs>
				<li>Meat_Human</li>
				<li>Meat_Megaspider</li>
				<li>InsectJelly</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
	</RecipeDef>

	<RecipeDef ParentName="MC_Recipe_BrothBase">
		<defName>MC_BrothSimple</defName>
		<label>cook simple meat broth</label>
		<description>Cook some simple meat broth from one ingredient.</description>
		<jobString>Cooking simple meat broth.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>3.0</count>
			</li>
		</ingredients>
		<products>
			<MealFine_Meat>2</MealFine_Meat>
			<MC_BrothSimple>10</MC_BrothSimple>
		</products>
		<fixedIngredientFilter>
			<thingDefs></thingDefs>
			<categories>
				<li>MeatRaw</li>
			</categories>
		</fixedIngredientFilter>
		<skillRequirements>
			<Cooking>6</Cooking>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef ParentName="MC_Recipe_BrothBase">
		<defName>MC_BrothFine</defName>
		<label>cook fine broth</label>
		<description>Cook some somewhat complex broth from several ingredients.</description>
		<jobString>Cooking fine broth.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>3.0</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>2.0</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs></thingDefs>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<products>
			<MealFine_Meat>2</MealFine_Meat>
			<MC_BrothFine>10</MC_BrothFine>
		</products>
		<skillRequirements>
			<Cooking>6</Cooking>
		</skillRequirements>
	</RecipeDef>


	<RecipeDef ParentName="MC_Recipe_BrothBase">
		<defName>MC_BrothLavish</defName>
		<label>cook lavish broth</label>
		<description>Cook some very complex broth from various ingredients. Much of the ingredients are wasted in order to create a broth that improves any food it comes into contact with.</description>
		<jobString>Cooking lavish broth.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>4.0</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>3.0</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs></thingDefs>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<products>
			<MealFine>2</MealFine>
			<MC_BrothLavish>10</MC_BrothLavish>
		</products>
		<skillRequirements>
			<Cooking>8</Cooking>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef ParentName="MC_Recipe_BrothBase">
		<defName>MC_BrothGourmet</defName>
		<label>cook gourmet broth</label>
		<description>Cook some gourmet broth that severely improves any food it comes into contact with.</description>
		<jobString>Cooking gourmet broth.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>3.0</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>2.0</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs></thingDefs>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<specialFiltersToDisallow>
				<li>AllowPlantFood</li>
			</specialFiltersToDisallow>
		</fixedIngredientFilter>
		<products>
			<MealFine>1</MealFine>
			<MC_BrothGourmet>5</MC_BrothGourmet>
		</products>
		<skillRequirements>
			<Cooking>10</Cooking>
		</skillRequirements>
	</RecipeDef>

</Defs>
<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="RoughPlantBase" Name="MC_CondimentBase" Abstract="True">
		<statBases>
			<MarketValue>1.32</MarketValue>
			<Nutrition>0.05</Nutrition>
			<Flammability>1.1</Flammability>
		</statBases>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>120</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<ingredient>
			<mergeCompatibilityTags>
				<li>Condiments</li>
			</mergeCompatibilityTags>
		</ingredient>
	</ThingDef>

	<ThingDef ParentName="MC_CondimentBase">
		<defName>MC_BloodInfusedSauce</defName>
		<label>blood-infused sauce</label>
		<description>A thick sauce infused with alcohol and blood. Tastes good and makes you not want to eat for a while.</description>
		<graphicData>
			<texPath>Things/Item/Drug/Beer</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(170,30,30)</color>
		</graphicData>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<specialThoughtAsIngredient>MC_ConsumedBloodInfusedSauce</specialThoughtAsIngredient>
			<optimalityOffsetFeedingAnimals>-50</optimalityOffsetFeedingAnimals>
		</ingestible>
		<thingCategories>
			<li>VCE_Condiments</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="MC_CondimentBase">
		<defName>MC_BrothSimple</defName>

<?xml version="1.0" encoding="utf-8"?>
<Defs>


	<HediffDef>
		<defName>MC_ConsumedBloodInfusedSauce</defName>
		<label>consumed blood infused sauce (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Blood infused sauce reduces hunger rate by 30% for about a day.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>MC_ConsumedBloodInfusedSauce</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<HungerRateMultiplier>-0.30</HungerRateMultiplier>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>MC_ConsumedBrothGourmet</defName>
		<label>consumed gourmet meat broth (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Gourmet broth reduces hunger rate by 30% and enhances manipulation for about a day.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>MC_ConsumedBrothGourmet</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<HungerRateMultiplier>-0.30</HungerRateMultiplier>
				</statOffsets>
			</li>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>


</Defs>
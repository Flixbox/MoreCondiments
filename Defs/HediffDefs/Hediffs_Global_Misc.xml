<?xml version="1.0" encoding="utf-8"?>
<Defs>


	<HediffDef>
		<defName>MC_ConsumedBloodInfusedSauce</defName>
		<label>consumed blood infused sauce (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Blood infused sauce reduces hunger rate by 30% for about a day.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>MC_ConsumedBloodInfusedSauce</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<HungerRateMultiplier>-0.30</HungerRateMultiplier>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>MC_ConsumedStarch</defName>
		<label>consumed starch (from meal)</label>
		<makesSickThought>false</makesSickThought>
		<description>Thick corn starch reduces hunger rate by 50% for about a day. It is also is easily converted into energy by the body, which results in a nice burst of energy. It increases moving stat by 10% for 24 hours.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>MC_ConsumedStarch</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<HungerRateMultiplier>-0.50</HungerRateMultiplier>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.10</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>MC_ConsumedBrothLavish</defName>
